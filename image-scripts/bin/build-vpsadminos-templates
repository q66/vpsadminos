#!/bin/bash

SELF=$(basename $0)
BASEDIR="$(realpath `dirname ${BASH_SOURCE[0]}`/..)"
LIBDIR="$BASEDIR/lib"
INCLUDE="$BASEDIR/include"

VENDOR=vpsfree
VERBOSE=n
BUILD_DIR=
OUTPUT_DIR=
BUILD_TEMPLATES=

. "$LIBDIR/base.sh"
. "$LIBDIR/shared.sh"

[ $# -lt 1 ] && usage && exit 1

[ $EUID != 0 ] && \
	warn "$SELF needs to run under root" && \
	exit 1

parse_opts $@
build_templates $BUILD_TEMPLATES
