#!/bin/bash -x
# This is internal builder, do not use this directly!
# Use osctl-template from vpsAdminOS to build the templates.

BASEDIR=$(realpath `dirname ${BASH_SOURCE[0]}`/..)

function usage {
	echo "Usage:"
	echo "  $0 builder|template [command arguments...]"
}

function builder_usage {
	echo "Usage:"
	echo "  $0 builder setup <name>"
}

function do_builder {
	if [ $# -lt 1 ] ; then
		builder_usage
		exit 1
	fi

	local action="$1"

	case "$action" in
		setup)
			local name="$2"
			local dir="$BASEDIR/builders/$name"

			if [ "$name" == "" ] ; then
				builder_usage
				exit 1
			elif [ ! -d "$dir" ] ; then
				echo "Builder '$name' not found"
				builder_usage
				exit 1
			fi

			. "$dir/setup.sh"
			;;
		*)
			builder_usage
			exit 1
			;;
	esac
}

function template_usage {
	echo "Usage:"
	echo "  $0 template build <build-id> <work-dir> <install-dir> <template-name>"
}

function do_template {
	if [ $# -lt 1 ] ; then
		template_usage
		exit 1
	fi

	local action="$1"

	case "$action" in
		build)
			shift 1
			build_template $@
			;;
		*)
			template_usage
			exit 1
			;;
	esac
}

function build_template {
	if [ $# != 4 ] ; then
		template_usage
		exit 1
	fi

	BUILD_ID="$1"
	DOWNLOAD="$2"
	INSTALL="$3"
	TEMPLATE="$4"

	INCLUDE="$BASEDIR/include"
	TEMPLATEDIR="$BASEDIR/templates/$TEMPLATE"
	CONFIGURE="$INSTALL/tmp/configure.sh"

	DISTNAME=
	RELVER=
	ARCH=
	VENDOR=
	VARIANT=

	IFS=- read DISTNAME RELVER ARCH VENDOR VARIANT <<< "$TEMPLATE"

	[ "$ARCH" == "" ] && ARCH=x86_64

	cd "$DOWNLOAD"

	. "$BASEDIR/include/common.sh"
	. "$BASEDIR/templates/$TEMPLATE/build.sh"
}

function main {
	if [ $# -lt 1 ] ; then
		usage
		exit 1
	fi

	local command="$1"
	shift 1

	case "$command" in
		builder)
			do_builder $@ ;;
		template)
			do_template $@ ;;
		*)
			usage
			exit 1
			;;
	esac
}

main $@
